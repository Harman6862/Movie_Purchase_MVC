@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{


    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    <br />

    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="btn btn-info">Logout</button>
    </form>

}
else
{


    <a class="btn btn-info" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <br />


    <a class="btn btn-info" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
